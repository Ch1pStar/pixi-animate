{
  "name": "pixi-animate",
  "description": "PIXI plugin for the PixiAnimate Extension",
  "version": "0.6.2",
  "main": "bin/pixi-animate.min.js",
  "author": "Matt Karl <matt.karl@jibo.com>",
  "devDependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browserify-versionify": "^1.0.6",
    "electron-prebuilt": "^1.2.7",
    "eslint": "^3.3.1",
    "floss": "^0.7.0",
    "gh-pages": "^0.11.0",
    "jaguarjs-jsdoc": "^1.0.0",
    "js-md5": "^0.4.1",
    "mkdirp": "^0.5.1",
    "parallelshell": "^2.0.0",
    "pixi.js": ">=4.0.0-X",
    "pixify": "^1.4.0",
    "rimraf": "^2.5.4",
    "watch": "^0.19.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jiborobot/pixi-animate"
  },
  "bugs": {
    "url": "https://github.com/jiborobot/pixi-animate/issues"
  },
  "homepage": "https://github.com/jiborobot/pixi-animate",
  "scripts": {
    "clean": "rimraf bin && mkdirp bin",
    "watch": "parallelshell \"npm run watch:lint\" \"npm run watch:build\"",
    "watch:build": "pixify -n pixi-animate -w",
    "watch:lint": "watch \"eslint scripts src tests || exit 0\" src",
    "test": "floss --path tests/index.js",
    "test:debug": "npm test -- --debug",
    "lint": "eslint scripts src tests",
    "prebuild": "npm run lint && npm run clean",
    "build": "pixify -n pixi-animate",
    "postbuild": "npm test",
    "docs": "jsdoc -c scripts/jsdoc.conf.json -R README.md",
    "predocs:live": "npm run docs",
    "docs:live": "gh-pages -d docs",
    "prerelease": "npm run build && npm run docs",
    "release": "node scripts/release.js",
    "postrelease": "git push && git push --tags",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "keywords": [
    "webgl",
    "pixi",
    "pixi.js",
    "Flash",
    "Animate CC",
    "animation"
  ],
  "license": "MIT",
  "eslintConfig": {
    "extends": "eslint:recommended",
    "rules": {
      "no-console": 0,
      "no-debugger": 1
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "globals": {
      "PIXI": true
    }
  },
  "browserify": {
    "transform": [
      "browserify-versionify",
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
